@page "/estados"
@using TurnosClinica.ApiClients.Estados
@using TurnosClinica.Application.DTOs.Estados
@inject EstadosApiClient Api



<h3>Lista de estados</h3>

<NavLink class="btn btn-success mb-3" href="/estados/crear">
    Nuevo estado
</NavLink>

@if (!string.IsNullOrEmpty(Error))
{
    <h3>Cargando... </h3>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Estados)
            {
                <tr>
                    <td>@e.Nombre</td>
                </tr>
            }
        </tbody>
    </table>
}


@code {

    private List<EstadoResponse> Estados = new();
    private bool Cargando;
    private string? Error;

    private async Task Cargar()
    {
        Error = null;
        Cargando = true;
        try
        {
            Estados = await Api.ListarAsync();
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            Cargando = false;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await Cargar();
    }


}
