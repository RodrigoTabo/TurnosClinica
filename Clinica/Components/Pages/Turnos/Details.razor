@page "/turnos/details/{Id:int}"
@rendermode InteractiveServer
@using TurnosClinica.ApiClients.Consultorios
@using TurnosClinica.ApiClients.Turnos
@using TurnosClinica.Application.DTOs.Turnos
@inject TurnosApiClient TurnosApiClient
@inject ConsultoriosApiClient ConsultoriosApi
@inject NavigationManager Nav

<div class="admin-page">
    <header class="admin-header">
        <h2 class="admin-title">Turnos</h2>
        <p class="admin-subtitle">Detalle</p>
    </header>

    <section class="admin-section">
        <div class="paises-scope">
            <div class="card border-0 shadow-sm pais-card">

                <div class="card-header bg-white border-bottom p-4 pais-header">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                        <div>
                            <h5 class="mb-1">Medicos #@Id</h5>
                            <div class="text-muted small">Ver y editar</div>
                        </div>

                        <button type="button"
                                class="btn btn-outline-secondary"
                                @onclick="Volver"
                                @onclick:stopPropagation="true"
                                @onclick:preventDefault="true"
                                disabled="@Guardando">
                            <i class="bi bi-arrow-left"></i> Volver
                        </button>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Error))
                    {
                        <div class="alert alert-danger mt-3 mb-0">@Error</div>
                    }
                </div>

                <div class="card-body p-6">
                    @if (Cargando)
                    {
                        <div class="text-muted">Cargando...</div>
                    }
                    else if (Turnos is null)
                    {
                        <div class="alert alert-warning mb-0">No existe.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm align-middle mb-0" style="table-layout: fixed; width: 100%;">
                                <colgroup>
                                    <col style="width: 8%;" />
                                    <col style="width: 26%;" />
                                    <col style="width: 10%;" />
                                    <col style="width: 22%;" />
                                    <col style="width: 34%;" />
                                </colgroup>

                                <thead>
                                    <tr>
                                        <th class="ps-4 py-3 text-uppercase small fw-bold text-secondary">ID</th>
                                        <th class="py-3 text-uppercase small fw-bold text-secondary">Fecha del Turno</th>
                                        <th class="py-3 text-uppercase small fw-bold text-secondary">Paciente</th>
                                        <th class="py-3 text-uppercase small fw-bold text-secondary">Medico</th>
                                        <th class="py-3 text-uppercase small fw-bold text-secondary">Consultorio</th>
                                        <th class="py-3 text-uppercase small fw-bold text-secondary">Pago</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td class="text-nowrap">
                                            <span class="value-pill">#@Id</span>
                                        </td>

                                        <td style="min-width:0;">
                                            @if (!Editando)
                                            {
                                                <span class="value-text d-inline-block text-truncate" style="max-width:100%;">
                                                    @Turnos.FechaTurno
                                                </span>
                                            }
                                            else
                                            {
                                                <input class="form-control form-control-sm"
                                                       style="width:100%;"
                                                       @bind-value="Model.FechaTurno"
                                                       @bind-value:event="oninput"
                                                       disabled="@Guardando"
                                                       placeholder="Fecha del Turno" />
                                            }
                                        </td>

                                        <td class="text-nowrap">
                                            @if (!Editando)
                                            {
                                                <span class="value-text">@Turnos.PacienteNombreCompleto</span>
                                            }
                                            else
                                            {
                                                <input class="form-control form-control-sm"
                                                       style="width:100%;"
                                                       @bind-value="Model.PacienteNombreCompleto"
                                                       @bind-value:event="oninput"
                                                       disabled="@Guardando"
                                                       placeholder="Nombre completo del paciente" />
                                            }
                                        </td>

                                        <td style="min-width:0;">
                                            @if (!Editando)
                                            {
                                                <span class="value-text d-inline-block text-truncate" style="max-width:100%;">
                                                    @Turnos.MedicoNombreCompleto
                                                </span>
                                            }
                                            else
                                            {
                                                <input class="form-control form-control-sm"
                                                       style="width:100%;"
                                                       @bind-value="Model.MedicoNombreCompleto"
                                                       @bind-value:event="oninput"
                                                       disabled="@Guardando"
                                                       placeholder="Nombre completo del medico" />
                                            }
                                        </td>

                                        <td style="min-width:0;">
                                            @if (!Editando)
                                            {
                                                <span class="value-text d-inline-block text-truncate" style="max-width:100%;">
                                                    @Turnos.Consultorio
                                                </span>
                                            }
                                            else
                                            {
                                                @if (!string.IsNullOrWhiteSpace(ErrorConsultorios))
                                                {
                                                    <div class="alert alert-danger py-2 mb-2">@ErrorConsultorios</div>
                                                }

                                                <InputSelect class="form-select form-select-sm"
                                                             style="width:100%;"
                                                             @bind-Value="Model.ConsultorioId"
                                                             disabled="@Guardando">
                                                    <option value="0" disabled>-- Seleccioná un consultorio --</option>
                                                    @foreach (var c in Consultorios)
                                                    {
                                                        <option value="@c.Id">@c.Nombre</option>
                                                    }
                                                </InputSelect>

                                                @if (CargandoConsultorios)
                                                {
                                                    <div class="text-muted small mt-1">Cargando Consultorios...</div>
                                                }
                                            }
                                        </td>

                                        @* <td style="min-width:0;">
                                            @if (!Editando)
                                            {
                                                <span class="value-text d-inline-block text-truncate" style="max-width:100%;">
                                                    @turnos.pagos
                                                </span>
                                            }
                                            else
                                            {
                                                @if (!string.IsNullOrWhiteSpace(ErrorPagos))
                                                {
                                                    <div class="alert alert-danger py-2 mb-2">@ErrorPagos</div>
                                                }

                                                <InputSelect class="form-select form-select-sm"
                                                             style="width:100%;"
                                                             @bind-Value="Model.tienepago"
                                                             disabled="@Guardando">
                                                    <option value="0" disabled>-- Seleccioná un consultorio --</option>
                                                    @foreach (var c in Pago)
                                                    {
                                                        <option value="@c.Id">@c.Nombre</option>
                                                    }
                                                </InputSelect>

                                                @if (CargandoConsultorios)
                                                {
                                                    <div class="text-muted small mt-1">Cargando Consultorios...</div>
                                                }
                                            }
                                        </td> *@
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                <div class="card-footer bg-white border-top p-4 d-flex gap-2 justify-content-end">
                    @if (Turnos is not null && !Cargando)
                    {
                        @if (!Editando)
                        {
                            <button type="button"
                                    class="btn btn-manage"
                                    @onclick="EntrarEdicion"
                                    disabled="@Guardando">
                                <i class="bi bi-pencil"></i> Editar
                            </button>
                        }
                        else
                        {
                            <button type="button"
                                    class="btn btn-manage"
                                    @onclick="Guardar"
                                    disabled="@Guardando">
                                <i class="bi bi-check2-circle"></i>
                                @(Guardando ? "Guardando..." : "Guardar")
                            </button>


                            <button type="button"
                                    class="btn btn-outline-secondary"
                                    @onclick="Cancelar"
                                    disabled="@Guardando">
                                Cancelar
                            </button>

                        }
                    }
                </div>

            </div>
        </div>
    </section>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private bool Cargando = true;
    private bool Editando = false;
    private bool Guardando = false;
    private string? Nombre;
    private string? Error;

    private TurnoResponse? Turnos;
    private UpdateTurnoRequest Model = new();

    private bool CargandoConsultorios = false;
    private string? ErrorConsultorios;
    private List<ItemConsultorios> Consultorios = new();

    protected override async Task OnParametersSetAsync()
    {
        await Cargar();
    }

    private async Task Cargar()
    {
        Cargando = true;
        Error = null;

        try
        {
            Turnos = await TurnosApiClient.GetByIdAsync(Id);

            if (Turnos is not null)
            {
                Model.Id = Turnos.Id;
                Model.MedicoNombreCompleto = Turnos.MedicoNombreCompleto;
                Model.PacienteNombreCompleto = Turnos.PacienteNombreCompleto;
                Model.ConsultorioId = Turnos.ConsultorioId;
                Model.TienePago = Turnos.TienePago;
            }

            if (Consultorios.Count == 0 && !CargandoConsultorios)
                await CargarConsultorios();
        }
        catch (Exception ex)
        {
            Error = ex.Message;
            Turnos = null;
        }
        finally
        {
            Cargando = false;
        }
    }

    private async Task CargarConsultorios()
    {
        CargandoConsultorios = true;
        ErrorConsultorios = null;

        try
        {
            var lista = await ConsultoriosApi.ListarAsync(Nombre);

            Consultorios = lista
                .Select(x => new ItemConsultorios(x.Id, x.Institucion))
                .OrderBy(x => x.Nombre)
                .ToList();
        }
        catch (Exception ex)
        {
            ErrorConsultorios = ex.Message;
            Consultorios = new();
        }
        finally
        {
            CargandoConsultorios = false;
        }
    }

    private async Task EntrarEdicion()
    {
        if (Turnos is null) return;

        Editando = true;
        Model.Id = Turnos.Id;
        Model.MedicoNombreCompleto = Turnos.MedicoNombreCompleto;
        Model.PacienteNombreCompleto = Turnos.PacienteNombreCompleto;
        Model.ConsultorioId = Turnos.ConsultorioId;
        Model.TienePago = Turnos.TienePago;

        if (Consultorios.Count == 0 && !CargandoConsultorios)
            await CargarConsultorios();
    }


    private async Task Guardar()
    {
        if (Turnos is null) return;

        Guardando = true;
        Error = null;

        try
        {
            Model.MedicoNombreCompleto = (Model.MedicoNombreCompleto ?? "").Trim();
            Model.PacienteNombreCompleto = (Model.PacienteNombreCompleto ?? "").Trim();

            if ((string.IsNullOrWhiteSpace(Model.MedicoNombreCompleto)) || (string.IsNullOrWhiteSpace(Model.PacienteNombreCompleto)))
                throw new InvalidOperationException("Ingresá un nombre.");

            if (Model.ConsultorioId <= 0)
                throw new InvalidOperationException("Seleccioná un consultorio.");

            await TurnosApiClient.UpdateAsync(Id, Model);

            Turnos = await TurnosApiClient.GetByIdAsync(Id);

            if (Turnos is not null)
            {
                Model.Id = Turnos.Id;
                Model.MedicoNombreCompleto = Turnos.MedicoNombreCompleto;
                Model.PacienteNombreCompleto = Turnos.PacienteNombreCompleto;
                Model.ConsultorioId = Turnos.ConsultorioId;
                Model.TienePago = Turnos.TienePago;
            }

            Editando = false;
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            Guardando = false;
        }
    }

    private void Cancelar()
    {
        Editando = false;

        if (Turnos is not null)
        {
            Model.Id = Turnos.Id;
            Model.MedicoNombreCompleto = Turnos.MedicoNombreCompleto;
            Model.PacienteNombreCompleto = Turnos.PacienteNombreCompleto;
            Model.ConsultorioId = Turnos.ConsultorioId;
            Model.TienePago = Turnos.TienePago;
        }
    }

    private record ItemConsultorios(int Id, string Nombre);

    private void Volver() => Nav.NavigateTo("/turnos");
}
