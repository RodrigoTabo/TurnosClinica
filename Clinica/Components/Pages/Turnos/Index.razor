@page "/turnos"
@rendermode InteractiveServer
@using TurnosClinica.ApiClients.Turnos
@using TurnosClinica.Application.DTOs.Turnos
@inject TurnosApiClient Api
@using Microsoft.JSInterop
@inject IJSRuntime JsRuntime

<div class="d-flex gap-2 align-items-end mb-3">
    <div>
        <label class="form-label">Desde</label>
        <input class="form-control" type="datetime-local" @bind="DesdeLocal" />
    </div>
    <div>
        <label class="form-label">Hasta</label>
        <input class="form-control" type="datetime-local" @bind="HastaLocal" />
    </div>
    <button class="btn btn-primary" @onclick="Cargar">Buscar</button>
</div>


<div class="admin-page">
    <header class="admin-header">
        <h2 class="admin-title">Turnos</h2>
        <p class="admin-subtitle">Administración</p>
    </header>

    <section class="admin-section">
        <div class="paises-scope">
            <div class="card border-0 shadow-sm paises-card">

                <div class="card-header bg-white border-bottom p-4 paises-header">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                        <div class="paises-head">
                            <h5 class="mb-1">Lista de Turnos</h5>
                            <div class="text-muted small">Gestioná el catálogo</div>
                        </div>

                        <NavLink class="btn btn-manage" href="/turnos/crear">
                            <i class="bi bi-plus-lg"></i> Registrar turnos
                        </NavLink>
                    </div>

                    @* FILTRO
                    <div class="paises-filter">
                        <div class="paises-filter-row">
                            <div class="paises-filter-field">
                                <label class="form-label mb-1">Medico</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-search"></i>
                                    </span>

                                    <InputText class="form-control"
                                               @bind-Value="Nombre"
                                               placeholder="Ej: Esteban Fernandez..." />
                                </div>
                            </div>

                            <div class="paises-filter-actions">
                                <button type="button" class="btn btn-manage" @onclick="Cargar" disabled="@Cargando">
                                    <i class="bi bi-funnel"></i> Buscar
                                </button>

                                <button type="button" class="btn btn-outline-secondary" @onclick="Limpiar" disabled="@Cargando">
                                    Limpiar
                                </button>
                            </div>
                        </div>
                    </div> *@

                    @if (!string.IsNullOrWhiteSpace(Error))
                    {
                        <div class="alert alert-danger mt-3 mb-0">@Error</div>
                    }
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0 paises-table">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4 py-3 text-uppercase small fw-bold text-secondary">ID</th>
                                <th class="py-3 text-uppercase small fw-bold text-secondary">Fecha del Turno</th>
                                <th class="py-3 text-uppercase small fw-bold text-secondary">PacienteNombreCompleto</th>
                                <th class="py-3 text-uppercase small fw-bold text-secondary">MedicoNombreCompleto</th>
                                <th class="py-3 text-uppercase small fw-bold text-secondary">Consultorio</th>
                                <th class="py-3 text-uppercase small fw-bold text-secondary">Pago</th>
                                <th class="py-3 text-uppercase small fw-bold text-secondary text-center">Acciones</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Cargando)
                            {
                                <tr>
                                    <td colspan="6" class="py-4 text-center text-muted">Cargando...</td>
                                </tr>
                            }
                            else if (Turnos is null || Turnos.Count == 0)
                            {
                                <tr>
                                    <td colspan="6" class="py-4 text-center text-muted">No hay turnos para mostrar.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var c in Turnos)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold">#@c.Id</td>
                                        <td class="paises-name">@c.FechaTurno</td>
                                        <td class="text-muted">@c.PacienteNombreCompleto</td>
                                        <td class="text-muted">@c.MedicoNombreCompleto</td>
                                        <td class="text-muted">@c.Consultorio</td>
                                        <td class="text-muted">@(c.TienePago ? "Sí" : "No")</td>

                                        <td class="text-center">
                                            <div class="btn-group paises-actions" role="group">

                                                <NavLink class="btn btn-outline-primary btn-sm me-2"
                                                         href="@($"/turnos/details/{c.Id}")"
                                                         title="Ver detalles">
                                                    <i class="bi bi-eye"></i>
                                                </NavLink>

                                                <button class="btn btn-outline-danger btn-sm"
                                                        type="button"
                                                        title="Eliminar"
                                                        @onclick="() => Eliminar(c.Id)"
                                                        disabled="@Cargando">
                                                    <i class="bi bi-trash3"></i>
                                                </button>

                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer paises-footer bg-white border-top p-4">
                    <div class="text-muted">
                        Total: <span class="fw-bold text-dark">@(Turnos?.Count ?? 0)</span>
                    </div>
                </div>

            </div>
        </div>
    </section>
    
</div>


@code {
    private List<TurnoResponse> Turnos = new();
    private bool Cargando;
    private string? Error;

    // datetime-local usa local time; lo convertimos a DateTime
    private DateTime DesdeLocal = DateTime.Today;
    private DateTime HastaLocal = DateTime.Today.AddDays(1);

    private async Task Cargar()
    {
        Error = null;
        Cargando = true;
        try
        {
            Turnos = await Api.ListarAsync(DesdeLocal, HastaLocal);
        }
        catch (TurnosApiException ex)
        {
            Error = ex.Message;
        }
        finally
        {
            Cargando = false;
        }
    }

    private async Task Eliminar(int id)
    {
        if (!await JsRuntime.InvokeAsync<bool>("confirm", $"¿Confirma que desea eliminar la ciudad #{id}?"))
            return;
        try
        {
            await Api.SoftDeleteAsync(id);
            await Cargar();
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await Cargar();
    }
}
