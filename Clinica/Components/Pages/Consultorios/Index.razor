@page "/consultorios"
@using TurnosClinica.Application.DTOs.Consultorios
@using TurnosClinica.ApiClients.Consultorios
@inject ConsultoriosApiClient Api


<h3>Lista de consultorios</h3>

<NavLink class="btn btn-success mb-3" href="/consultorios/crear">
    Crear nuevo consultorio
</NavLink>

@if (!string.IsNullOrEmpty(Error))
{
    <div class="alert alert-danger">@Error</div>
}

@if (Cargando)
{
    <p>Cargando...</p>
}else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Institucion</th>
                <th>Calle</th>
                <th>Altura</th>
                <th>Ciudad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Consultorios)
            {
                <tr>
                    <td>@c.Institucion</td>
                    <td>@c.Calle</td>
                    <td>@c.Altura</td>
                    <td>@c.Ciudad</td>
                </tr>
            }
        </tbody>
    </table>
}


@code {

    private List<ConsultorioResponse> Consultorios = new ();
    private bool Cargando;
    private string? Error;


    private async Task Cargar()
    {
        Error = null;
        Cargando = true;
        try
        {
            Consultorios = await Api.ListarAsync();
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            Cargando = false;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await Cargar();
    }

}
