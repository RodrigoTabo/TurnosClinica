@page "/consultorios/crear"
@rendermode InteractiveServer
@using TurnosClinica.ApiClients.Consultorios
@using TurnosClinica.Application.DTOs.Consultorios
@using TurnosClinica.ApiClients.Ciudades
@using TurnosClinica.Application.DTOs.Ciudades
@inject ConsultoriosApiClient Api
@inject CiudadesApiClient CiudadesApi
@inject NavigationManager Nav


<div class="admin-page">
    <header class="admin-header">
        <h2 class="admin-title">Consultorios</h2>
        <p class="admin-subtitle">Crear</p>
    </header>

    <section class="admin-section">
        <div class="paises-scope">
            <div class="card border-0 shadow-sm pais-card">

                <div class="card-header bg-white border-bottom p-4 pais-header">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                        <div>
                            <h5 class="mb-1">Nuevo consultorio</h5>
                            <div class="text-muted small">Completá los datos y guardá</div>
                        </div>

                        <button type="button"
                                class="btn btn-outline-secondary"
                                @onclick="Volver"
                                disabled="@Guardando">
                            <i class="bi bi-arrow-left"></i> Volver
                        </button>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Error))
                    {
                        <div class="alert alert-danger mt-3 mb-0">@Error</div>
                    }
                </div>

                <div class="card-body p-6">
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label class="form-label">Institucion</label>
                            <input class="form-control"
                                   placeholder="Ej: Garraham"
                                   @bind-value="Model.Institucion"
                                   @bind-value:event="oninput"
                                   disabled="@Guardando" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">Calle</label>
                            <input class="form-control"
                                   placeholder="Ej: Av. Rivadavia"
                                   @bind-value="Model.Calle"
                                   @bind-value:event="oninput"
                                   disabled="@Guardando" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">Altura</label>
                            <input class="form-control"
                                   placeholder="Ej: 1810"
                                   @bind-value="Model.Altura"
                                   @bind-value:event="oninput"
                                   disabled="@Guardando" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label">Ciudad</label>

                            @if (CargandoCiudades)
                            {
                                <div class="form-text">Cargando Ciudades...</div>
                            }
                            else
                            {
                                @if (!string.IsNullOrWhiteSpace(ErrorCiudades))
                                {
                                    <div class="alert alert-danger py-2 mb-2">@ErrorCiudades</div>
                                }

                                <select class="form-select"
                                        @bind="Model.CiudadId"
                                        disabled="@Guardando">
                                    <option value="0" disabled>-- Seleccioná una Ciudad --</option>

                                    @foreach (var p in Ciudades)
                                    {
                                        <option value="@p.Id">@p.Nombre, @p.provincia</option>
                                    }
                                </select>

                                <div class="form-hint">Elegí la Ciudad que le pertenezca a la Consultorio </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white border-top p-4 d-flex gap-2 justify-content-end">

                    <button type="button"
                            class="btn btn-outline-secondary"
                            @onclick="Volver"
                            disabled="@Guardando">
                        Cancelar
                    </button>

                    <button type="button"
                            class="btn btn-manage"
                            @onclick="Create"
                            disabled="@Guardando">
                        <i class="bi bi-check2-circle"></i>
                        @(Guardando ? "Guardando..." : "Crear")
                    </button>


                </div>

            </div>
        </div>
    </section>
</div>

@code {
    private string? Error;
    private bool Guardando;
    private string? Nombre;


    private bool CargandoCiudades = true;
    private string? ErrorCiudades;

    private CrearConsultoriosVM Model = new() { CiudadId = 0 };
    private List<ItemCiudades> Ciudades = new();


    protected override async Task OnInitializedAsync()
    {
        await CargarCiudades();
    }

    private async Task CargarCiudades()
    {
        CargandoCiudades = true;
        ErrorCiudades = null;

        try
        {
            var lista = await CiudadesApi.ListarAsync(Nombre);

            Ciudades = lista
                .Select(x => new ItemCiudades(x.Id, x.Nombre, x.Provincia))
                .OrderBy(x => x.Nombre)
                .ToList();
        }
        catch (Exception ex)
        {
            ErrorCiudades = ex.Message;
            Ciudades = new();
        }
        finally
        {
            CargandoCiudades = false;
        }
    }

    private async Task Create()
    {
        Error = null;

        var nombre = (Model.Institucion ?? "").Trim();
        if (string.IsNullOrWhiteSpace(nombre))
        {
            Error = "Ingresá un Instituto.";
            return;
        }

        if (Model.CiudadId <= 0)
        {
            Error = "Seleccioná una ciudad.";
            return;
        }

        Guardando = true;

        try
        {
            var req = new CrearConsultorioRequest
            {
                Institucion = Model.Institucion,
                Altura = Model.Altura,
                Calle = Model.Calle,
                CiudadId = Model.CiudadId
            };

            await Api.CrearAsync(req);
            Nav.NavigateTo("/consultorios");
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            Guardando = false;
        }
    }

    private class CrearConsultoriosVM
    {
        public string Institucion { get; set; }
        public string Calle { get; set; } = "";
        public int Altura { get; set; }
        public int CiudadId { get; set; }
    }

    private void Volver() => Nav.NavigateTo("/consultorios");
    private record ItemCiudades(int Id, string Nombre, string provincia);
}
