@page "/consultorios/details/{Id:int}"
@rendermode InteractiveServer
@using TurnosClinica.ApiClients.Consultorios
@using TurnosClinica.ApiClients.Ciudades
@using TurnosClinica.Application.DTOs.Consultorios
@inject ConsultoriosApiClient ConsultoriosApiClient
@inject CiudadesApiClient CiudadesApiClient
@inject NavigationManager Nav

<div class="admin-page">
    <header class="admin-header">
        <h2 class="admin-title">Consultorios</h2>
        <p class="admin-subtitle">Detalle</p>
    </header>

    <section class="admin-section">
        <div class="paises-scope">
            <div class="card border-0 shadow-sm pais-card">

                <div class="card-header bg-white border-bottom p-4 pais-header">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                        <div>
                            <h5 class="mb-1">Consultorios #@Id</h5>
                            <div class="text-muted small">Ver y editar</div>
                        </div>

                        <button type="button"
                                class="btn btn-outline-secondary"
                                @onclick="Volver"
                                @onclick:stopPropagation="true"
                                @onclick:preventDefault="true"
                                disabled="@Guardando">
                            <i class="bi bi-arrow-left"></i> Volver
                        </button>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Error))
                    {
                        <div class="alert alert-danger mt-3 mb-0">@Error</div>
                    }
                </div>

                <div class="card-body p-6">
                    @if (Cargando)
                    {
                        <div class="text-muted">Cargando...</div>
                    }
                    else if (Consultorio is null)
                    {
                        <div class="alert alert-warning mb-0">No existe.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm align-middle mb-0" style="table-layout: fixed; width: 100%;">
                                <colgroup>
                                    <col style="width: 8%;" />
                                    <col style="width: 26%;" />
                                    <col style="width: 10%;" />
                                    <col style="width: 22%;" />
                                    <col style="width: 34%;" />
                                </colgroup>

                                <thead>
                                    <tr>
                                        <th class="text-muted text-nowrap">ID</th>
                                        <th class="text-muted text-nowrap">Institución</th>
                                        <th class="text-muted text-nowrap">Altura</th>
                                        <th class="text-muted text-nowrap">Calle</th>
                                        <th class="text-muted text-nowrap">Ciudad</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td class="text-nowrap">
                                            <span class="value-pill">#@Id</span>
                                        </td>

                                        <td style="min-width:0;">
                                            @if (!Editando)
                                            {
                                                <span class="value-text d-inline-block text-truncate" style="max-width:100%;">
                                                    @Consultorio.Institucion
                                                </span>
                                            }
                                            else
                                            {
                                                <input class="form-control form-control-sm"
                                                       style="width:100%;"
                                                       @bind-value="Model.Institucion"
                                                       @bind-value:event="oninput"
                                                       disabled="@Guardando"
                                                       placeholder="Nombre del consultorio" />
                                            }
                                        </td>

                                        <td class="text-nowrap">
                                            @if (!Editando)
                                            {
                                                <span class="value-text">@Consultorio.Altura</span>
                                            }
                                            else
                                            {
                                                <input class="form-control form-control-sm"
                                                       style="width:100%;"
                                                       @bind-value="Model.Altura"
                                                       @bind-value:event="oninput"
                                                       disabled="@Guardando"
                                                       placeholder="Altura" />
                                            }
                                        </td>

                                        <td style="min-width:0;">
                                            @if (!Editando)
                                            {
                                                <span class="value-text d-inline-block text-truncate" style="max-width:100%;">
                                                    @Consultorio.Calle
                                                </span>
                                            }
                                            else
                                            {
                                                <input class="form-control form-control-sm"
                                                       style="width:100%;"
                                                       @bind-value="Model.Calle"
                                                       @bind-value:event="oninput"
                                                       disabled="@Guardando"
                                                       placeholder="Calle del consultorio" />
                                            }
                                        </td>

                                        <td style="min-width:0;">
                                            @if (!Editando)
                                            {
                                                <span class="value-text d-inline-block text-truncate" style="max-width:100%;">
                                                    @Consultorio.Ciudad
                                                </span>
                                            }
                                            else
                                            {
                                                @if (!string.IsNullOrWhiteSpace(ErrorCiudades))
                                                {
                                                    <div class="alert alert-danger py-2 mb-2">@ErrorCiudades</div>
                                                }

                                                <InputSelect class="form-select form-select-sm"
                                                             style="width:100%;"
                                                             @bind-Value="Model.CiudadId"
                                                             disabled="@Guardando">
                                                    <option value="0" disabled>-- Seleccioná una Ciudad --</option>
                                                    @foreach (var p in Ciudades)
                                                    {
                                                        <option value="@p.Id">@p.Nombre</option>
                                                    }
                                                </InputSelect>

                                                @if (CargandoCiudades)
                                                {
                                                    <div class="text-muted small mt-1">Cargando ciudades...</div>
                                                }
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                <div class="card-footer bg-white border-top p-4 d-flex gap-2 justify-content-end">
                    @if (Consultorio is not null && !Cargando)
                    {
                        @if (!Editando)
                        {
                            <button type="button"
                                    class="btn btn-manage"
                                    @onclick="EntrarEdicion"
                                    disabled="@Guardando">
                                <i class="bi bi-pencil"></i> Editar
                            </button>
                        }
                        else
                        {
                            <button type="button"
                                    class="btn btn-manage"
                                    @onclick="Guardar"
                                    disabled="@Guardando">
                                <i class="bi bi-check2-circle"></i>
                                @(Guardando ? "Guardando..." : "Guardar")
                            </button>


                            <button type="button"
                                    class="btn btn-outline-secondary"
                                    @onclick="Cancelar"
                                    disabled="@Guardando">
                                Cancelar
                            </button>

                        }
                    }
                </div>

            </div>
        </div>
    </section>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private bool Cargando = true;
    private bool Editando = false;
    private bool Guardando = false;
    private string? Nombre;
    private string? Error;

    private ConsultorioResponse? Consultorio;
    private UpdateConsultorioRequest Model = new();

    private bool CargandoCiudades = false;
    private string? ErrorCiudades;
    private List<ItemCiudades> Ciudades = new();

    protected override async Task OnParametersSetAsync()
    {
        await Cargar();
    }

    private async Task Cargar()
    {
        Cargando = true;
        Error = null;

        try
        {
            Consultorio = await ConsultoriosApiClient.GetByIdAsync(Id);

            if (Consultorio is not null)
            {
                Model.Institucion = Consultorio.Institucion;
                Model.CiudadId = Consultorio.CiudadId;
            }

            if (Ciudades.Count == 0 && !CargandoCiudades)
                await CargarCiudades();
        }
        catch (Exception ex)
        {
            Error = ex.Message;
            Consultorio = null;
        }
        finally
        {
            Cargando = false;
        }
    }

    private async Task CargarCiudades()
    {
        CargandoCiudades = true;
        ErrorCiudades = null;

        try
        {
            var lista = await CiudadesApiClient.ListarAsync(Nombre);

            Ciudades = lista
                .Select(x => new ItemCiudades(x.Id, x.Nombre))
                .OrderBy(x => x.Nombre)
                .ToList();
        }
        catch (Exception ex)
        {
            ErrorCiudades = ex.Message;
            Ciudades = new();
        }
        finally
        {
            CargandoCiudades = false;
        }
    }

    private async Task EntrarEdicion()
    {
        if (Consultorio is null) return;

        Editando = true;
        Model.Institucion = Consultorio.Institucion;
        Model.CiudadId = Consultorio.CiudadId;

        if (Ciudades.Count == 0 && !CargandoCiudades)
            await CargarCiudades();
    }


    private async Task Guardar()
    {
        if (Consultorio is null) return;

        Guardando = true;
        Error = null;

        try
        {
            Model.Institucion = (Model.Institucion ?? "").Trim();

            if (string.IsNullOrWhiteSpace(Model.Institucion))
                throw new InvalidOperationException("Ingresá una Institucion.");

            if (Model.CiudadId <= 0)
                throw new InvalidOperationException("Seleccioná una Ciudad.");

            await ConsultoriosApiClient.UpdateAsync(Id, Model);

            Consultorio = await ConsultoriosApiClient.GetByIdAsync(Id);

            if (Consultorio is not null)
            {
                Model.Institucion = Consultorio.Institucion;
                Model.CiudadId = Consultorio.CiudadId;
            }

            Editando = false;
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            Guardando = false;
        }
    }

    private void Cancelar()
    {
        Editando = false;

        if (Consultorio is not null)
        {
            Model.Institucion = Consultorio.Institucion;
            Model.CiudadId = Consultorio.CiudadId;
        }
    }

    private record ItemCiudades(int Id, string Nombre);

    private void Volver() => Nav.NavigateTo("/consultorios");
}
