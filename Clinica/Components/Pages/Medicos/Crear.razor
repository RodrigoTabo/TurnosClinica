@page "/medicos/crear"
@rendermode InteractiveServer
@using TurnosClinica.ApiClients.Medicos
@using TurnosClinica.Application.DTOs.Medicos
@using TurnosClinica.ApiClients.Especialidades
@using TurnosClinica.Application.DTOs.Especialidades
@inject MedicosApiClient Api
@inject EspecialidadesApiClient EspecialidadApi
@inject NavigationManager Nav


<div class="admin-page">
    <header class="admin-header">
        <h2 class="admin-title">Medicos</h2>
        <p class="admin-subtitle">Crear</p>
    </header>

    <section class="admin-section">
        <div class="paises-scope">
            <div class="card border-0 shadow-sm pais-card">

                <div class="card-header bg-white border-bottom p-4 pais-header">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                        <div>
                            <h5 class="mb-1">Nuevo medico</h5>
                            <div class="text-muted small">Completá los datos y guardá</div>
                        </div>

                        <button type="button"
                                class="btn btn-outline-secondary"
                                @onclick="Volver"
                                disabled="@Guardando">
                            <i class="bi bi-arrow-left"></i> Volver
                        </button>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Error))
                    {
                        <div class="alert alert-danger mt-3 mb-0">@Error</div>
                    }
                </div>

                <div class="card-body p-6">
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label class="form-label">DNI</label>
                            <input class="form-control"
                                   placeholder="Ej: 123456789"
                                   @bind-value="Model.DNI"
                                   @bind-value:event="oninput"
                                   disabled="@Guardando" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">Nombre</label>
                            <input class="form-control"
                                   placeholder="Ej: Fernando"
                                   @bind-value="Model.Nombre"
                                   @bind-value:event="oninput"
                                   disabled="@Guardando" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">Apellido</label>
                            <input class="form-control"
                                   placeholder="Ej: De Rossi"
                                   @bind-value="Model.Apellido"
                                   @bind-value:event="oninput"
                                   disabled="@Guardando" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label">Especialidad</label>

                            @if (CargandoEspecialidades)
                            {
                                <div class="form-text">Cargando Especialidades...</div>
                            }
                            else
                            {
                                @if (!string.IsNullOrWhiteSpace(ErrorEspecialidades))
                                {
                                    <div class="alert alert-danger py-2 mb-2">@ErrorEspecialidades</div>
                                }

                                <select class="form-select"
                                        @bind="Model.EspecialidadId"
                                        disabled="@Guardando">
                                    <option value="0" disabled>-- Seleccioná una Especialidad --</option>

                                    @foreach (var p in Especialidades)
                                    {
                                        <option value="@p.Id">@p.Nombre</option>
                                    }
                                </select>

                                <div class="form-hint">Elegí la Especialidad que le pertenezca al Medico </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white border-top p-4 d-flex gap-2 justify-content-end">

                    <button type="button"
                            class="btn btn-outline-secondary"
                            @onclick="Volver"
                            disabled="@Guardando">
                        Cancelar
                    </button>

                    <button type="button"
                            class="btn btn-manage"
                            @onclick="Create"
                            disabled="@Guardando">
                        <i class="bi bi-check2-circle"></i>
                        @(Guardando ? "Guardando..." : "Crear")
                    </button>


                </div>

            </div>
        </div>
    </section>
</div>

@code {
    private string? Error;
    private bool Guardando;
    private string? Nombre;


    private bool CargandoEspecialidades = true;
    private string? ErrorEspecialidades;

    private CrearMedicosVM Model = new() { EspecialidadId = 0 };
    private List<ItemEspecialidades> Especialidades = new();


    protected override async Task OnInitializedAsync()
    {
        await CargarEspecialidades();
    }

    private async Task CargarEspecialidades()
    {
        CargandoEspecialidades = true;
        ErrorEspecialidades = null;

        try
        {
            var lista = await EspecialidadApi.ListarAsync(Nombre);

            Especialidades = lista
                .Select(x => new ItemEspecialidades(x.Id, x.Nombre))
                .OrderBy(x => x.Nombre)
                .ToList();
        }
        catch (Exception ex)
        {
            ErrorEspecialidades = ex.Message;
            Especialidades = new();
        }
        finally
        {
            CargandoEspecialidades = false;
        }
    }

    private async Task Create()
    {
        Error = null;

        var nombre = (Model.Nombre ?? "").Trim();
        if (string.IsNullOrWhiteSpace(nombre))
        {
            Error = "Ingresá un Instituto.";
            return;
        }

        if (Model.EspecialidadId <= 0)
        {
            Error = "Seleccioná una ciudad.";
            return;
        }

        Guardando = true;

        try
        {
            var req = new CrearMedicoRequest
            {
                DNI = Model.DNI,
                Nombre = Model.Nombre,
                Apellido = Model.Apellido,
                EspecialidadId = Model.EspecialidadId
            };

            await Api.CrearAsync(req);
            Nav.NavigateTo("/medicos");
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            Guardando = false;
        }
    }

    private class CrearMedicosVM
    {
        public int DNI { get; set; }
        public string Nombre { get; set; } = "";
        public string Apellido { get; set; } = "";
        public int EspecialidadId { get; set; }
    }

    private void Volver() => Nav.NavigateTo("/medicos");
    private record ItemEspecialidades(int Id, string Nombre);
}
