@page "/medicos/details/{Id:int}"
@rendermode InteractiveServer
@using TurnosClinica.ApiClients.Medicos
@using TurnosClinica.ApiClients.Especialidades
@using TurnosClinica.Application.DTOs.Medicos
@inject MedicosApiClient MedicosApiClient
@inject EspecialidadesApiClient EspecialidadesApiClient
@inject NavigationManager Nav

<div class="admin-page">
    <header class="admin-header">
        <h2 class="admin-title">Medicos</h2>
        <p class="admin-subtitle">Detalle</p>
    </header>

    <section class="admin-section">
        <div class="paises-scope">
            <div class="card border-0 shadow-sm pais-card">

                <div class="card-header bg-white border-bottom p-4 pais-header">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                        <div>
                            <h5 class="mb-1">Medicos #@Id</h5>
                            <div class="text-muted small">Ver y editar</div>
                        </div>

                        <button type="button"
                                class="btn btn-outline-secondary"
                                @onclick="Volver"
                                @onclick:stopPropagation="true"
                                @onclick:preventDefault="true"
                                disabled="@Guardando">
                            <i class="bi bi-arrow-left"></i> Volver
                        </button>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Error))
                    {
                        <div class="alert alert-danger mt-3 mb-0">@Error</div>
                    }
                </div>

                <div class="card-body p-6">
                    @if (Cargando)
                    {
                        <div class="text-muted">Cargando...</div>
                    }
                    else if (Medico is null)
                    {
                        <div class="alert alert-warning mb-0">No existe.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm align-middle mb-0" style="table-layout: fixed; width: 100%;">
                                <colgroup>
                                    <col style="width: 8%;" />
                                    <col style="width: 26%;" />
                                    <col style="width: 10%;" />
                                    <col style="width: 22%;" />
                                    <col style="width: 34%;" />
                                </colgroup>

                                <thead>
                                    <tr>
                                        <th class="text-muted text-nowrap">ID</th>
                                        <th class="text-muted text-nowrap">DNI</th>
                                        <th class="text-muted text-nowrap">Nombre</th>
                                        <th class="text-muted text-nowrap">Apellido</th>
                                        <th class="text-muted text-nowrap">Especialidad</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td class="text-nowrap">
                                            <span class="value-pill">#@Id</span>
                                        </td>

                                        <td style="min-width:0;">
                                            @if (!Editando)
                                            {
                                                <span class="value-text d-inline-block text-truncate" style="max-width:100%;">
                                                    @Medico.DNI
                                                </span>
                                            }
                                            else
                                            {
                                                <input class="form-control form-control-sm"
                                                       style="width:100%;"
                                                       @bind-value="Model.DNI"
                                                       @bind-value:event="oninput"
                                                       disabled="@Guardando"
                                                       placeholder="DNI del Medico" />
                                            }
                                        </td>

                                        <td class="text-nowrap">
                                            @if (!Editando)
                                            {
                                                <span class="value-text">@Medico.Nombre</span>
                                            }
                                            else
                                            {
                                                <input class="form-control form-control-sm"
                                                       style="width:100%;"
                                                       @bind-value="Model.Nombre"
                                                       @bind-value:event="oninput"
                                                       disabled="@Guardando"
                                                       placeholder="Nombre del medico" />
                                            }
                                        </td>

                                        <td style="min-width:0;">
                                            @if (!Editando)
                                            {
                                                <span class="value-text d-inline-block text-truncate" style="max-width:100%;">
                                                    @Medico.Apellido
                                                </span>
                                            }
                                            else
                                            {
                                                <input class="form-control form-control-sm"
                                                       style="width:100%;"
                                                       @bind-value="Model.Apellido"
                                                       @bind-value:event="oninput"
                                                       disabled="@Guardando"
                                                       placeholder="Apellido del medico" />
                                            }
                                        </td>

                                        <td style="min-width:0;">
                                            @if (!Editando)
                                            {
                                                <span class="value-text d-inline-block text-truncate" style="max-width:100%;">
                                                    @Medico.Especialidad
                                                </span>
                                            }
                                            else
                                            {
                                                @if (!string.IsNullOrWhiteSpace(ErrorEspecialidades))
                                                {
                                                    <div class="alert alert-danger py-2 mb-2">@ErrorEspecialidades</div>
                                                }

                                                <InputSelect class="form-select form-select-sm"
                                                             style="width:100%;"
                                                             @bind-Value="Model.EspecialidadId"
                                                             disabled="@Guardando">
                                                    <option value="0" disabled>-- Seleccioná una Especialidad --</option>
                                                    @foreach (var p in Especialidades)
                                                    {
                                                        <option value="@p.Id">@p.Nombre</option>
                                                    }
                                                </InputSelect>

                                                @if (CargandoEspecialidades)
                                                {
                                                    <div class="text-muted small mt-1">Cargando Especialidades...</div>
                                                }
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                <div class="card-footer bg-white border-top p-4 d-flex gap-2 justify-content-end">
                    @if (Medico is not null && !Cargando)
                    {
                        @if (!Editando)
                        {
                            <button type="button"
                                    class="btn btn-manage"
                                    @onclick="EntrarEdicion"
                                    disabled="@Guardando">
                                <i class="bi bi-pencil"></i> Editar
                            </button>
                        }
                        else
                        {
                            <button type="button"
                                    class="btn btn-manage"
                                    @onclick="Guardar"
                                    disabled="@Guardando">
                                <i class="bi bi-check2-circle"></i>
                                @(Guardando ? "Guardando..." : "Guardar")
                            </button>


                            <button type="button"
                                    class="btn btn-outline-secondary"
                                    @onclick="Cancelar"
                                    disabled="@Guardando">
                                Cancelar
                            </button>

                        }
                    }
                </div>

            </div>
        </div>
    </section>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private bool Cargando = true;
    private bool Editando = false;
    private bool Guardando = false;
    private string? Nombre;
    private string? Error;

    private MedicoResponse? Medico;
    private UpdateMedicoRequest Model = new();

    private bool CargandoEspecialidades = false;
    private string? ErrorEspecialidades;
    private List<ItemEspecialidades> Especialidades = new();

    protected override async Task OnParametersSetAsync()
    {
        await Cargar();
    }

    private async Task Cargar()
    {
        Cargando = true;
        Error = null;

        try
        {
            Medico = await MedicosApiClient.GetByIdAsync(Id);

            if (Medico is not null)
            {
                Model.DNI = Medico.DNI;
                Model.Nombre = Medico.Nombre;
                Model.Apellido = Medico.Apellido;
                Model.EspecialidadId = Medico.EspecialidadId;
            }

            if (Especialidades.Count == 0 && !CargandoEspecialidades)
                await CargarEspecialidades();
        }
        catch (Exception ex)
        {
            Error = ex.Message;
            Medico = null;
        }
        finally
        {
            Cargando = false;
        }
    }

    private async Task CargarEspecialidades()
    {
        CargandoEspecialidades = true;
        ErrorEspecialidades = null;

        try
        {
            var lista = await EspecialidadesApiClient.ListarAsync(Nombre);

            Especialidades = lista
                .Select(x => new ItemEspecialidades(x.Id, x.Nombre))
                .OrderBy(x => x.Nombre)
                .ToList();
        }
        catch (Exception ex)
        {
            ErrorEspecialidades = ex.Message;
            Especialidades = new();
        }
        finally
        {
            CargandoEspecialidades = false;
        }
    }

    private async Task EntrarEdicion()
    {
        if (Medico is null) return;

        Editando = true;
        Model.DNI = Medico.DNI;
        Model.Nombre = Medico.Nombre;
        Model.Apellido = Medico.Apellido;
        Model.EspecialidadId = Medico.EspecialidadId;

        if (Especialidades.Count == 0 && !CargandoEspecialidades)
            await CargarEspecialidades();
    }


    private async Task Guardar()
    {
        if (Medico is null) return;

        Guardando = true;
        Error = null;

        try
        {
            Model.Nombre = (Model.Nombre ?? "").Trim();

            if (string.IsNullOrWhiteSpace(Model.Nombre))
                throw new InvalidOperationException("Ingresá un nombre.");

            if (Model.EspecialidadId <= 0)
                throw new InvalidOperationException("Seleccioná una Especialidad.");

            await MedicosApiClient.UpdateAsync(Id, Model);

            Medico = await MedicosApiClient.GetByIdAsync(Id);

            if (Medico is not null)
            {
                Model.DNI = Medico.DNI;
                Model.Nombre = Medico.Nombre;
                Model.Apellido = Medico.Apellido;
                Model.EspecialidadId = Medico.EspecialidadId;
            }

            Editando = false;
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            Guardando = false;
        }
    }

    private void Cancelar()
    {
        Editando = false;

        if (Medico is not null)
        {
            Model.DNI = Medico.DNI;
            Model.Nombre = Medico.Nombre;
            Model.Apellido = Medico.Apellido;
            Model.EspecialidadId = Medico.EspecialidadId;
        }
    }

    private record ItemEspecialidades(int Id, string Nombre);

    private void Volver() => Nav.NavigateTo("/medicos");
}
