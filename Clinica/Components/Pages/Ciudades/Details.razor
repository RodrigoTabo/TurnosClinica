@page "/ciudades/details/{Id:int}"
@rendermode InteractiveServer
@using TurnosClinica.ApiClients.Ciudades
@using TurnosClinica.ApiClients.Provincias
@using TurnosClinica.Application.DTOs.Ciudades
@inject CiudadesApiClient CiudadesApiClient
@inject ProvinciasApiClient ProvinciasApiClient
@inject NavigationManager Nav

<div class="admin-page">
    <header class="admin-header">
        <h2 class="admin-title">Ciudades</h2>
        <p class="admin-subtitle">Detalle</p>
    </header>

    <section class="admin-section">
        <div class="paises-scope">
            <div class="card border-0 shadow-sm pais-card">

                <div class="card-header bg-white border-bottom p-4 pais-header">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                        <div>
                            <h5 class="mb-1">Ciudad #@Id</h5>
                            <div class="text-muted small">Ver y editar</div>
                        </div>

                        <button type="button"
                                class="btn btn-outline-secondary"
                                @onclick="Volver"
                                @onclick:stopPropagation="true"
                                @onclick:preventDefault="true"
                                disabled="@Guardando">
                            <i class="bi bi-arrow-left"></i> Volver
                        </button>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Error))
                    {
                        <div class="alert alert-danger mt-3 mb-0">@Error</div>
                    }
                </div>

                <div class="card-body p-4">
                    @if (Cargando)
                    {
                        <div class="text-muted">Cargando...</div>
                    }
                    else if (Ciudad is null)
                    {
                        <div class="alert alert-warning mb-0">No existe.</div>
                    }
                    else
                    {
                        <div class="row g-3 align-items-end">

                            <div class="col-12 col-md-3">
                                <label class="form-label">ID</label>
                                <div class="value-pill">#@Id</div>
                            </div>

                            <div class="col-12 col-md-5">
                                <label class="form-label">Nombre</label>

                                @if (!Editando)
                                {
                                    <div class="value-text">@Ciudad.Nombre</div>
                                }
                                else
                                {
                                    <input class="form-control"
                                           @bind-value="Model.Nombre"
                                           @bind-value:event="oninput"
                                           disabled="@Guardando"
                                           placeholder="Nombre de la ciudad" />
                                }
                            </div>

                            <div class="col-12 col-md-4">
                                <label class="form-label">Provincia</label>

                                @if (!Editando)
                                {
                                    <div class="value-text">@Ciudad.Provincia</div>
                                }
                                else
                                {
                                    @if (!string.IsNullOrWhiteSpace(ErrorProvincias))
                                    {
                                        <div class="alert alert-danger py-2 mb-2">@ErrorProvincias</div>
                                    }

                                    <InputSelect class="form-select" @bind-Value="Model.ProvinciaId" disabled="@Guardando">
                                        <option value="0" disabled>-- Seleccioná una provincia --</option>

                                        @foreach (var p in Provincias)
                                        {
                                            <option value="@p.Id">@p.Nombre</option>
                                        }
                                    </InputSelect>

                                    @if (CargandoProvincias)
                                    {
                                        <div class="text-muted small mt-1">Cargando provincias...</div>
                                    }


                                }
                            </div>

                        </div>
                    }
                </div>

                <div class="card-footer bg-white border-top p-4 d-flex gap-2 justify-content-end">
                    @if (Ciudad is not null && !Cargando)
                    {
                        @if (!Editando)
                        {
                            <button type="button"
                                    class="btn btn-manage"
                                    @onclick="EntrarEdicion"
                                    disabled="@Guardando">
                                <i class="bi bi-pencil"></i> Editar
                            </button>
                        }
                        else
                        {
                            <button type="button"
                                    class="btn btn-manage"
                                    @onclick="Guardar"
                                    disabled="@Guardando">
                                <i class="bi bi-check2-circle"></i>
                                @(Guardando ? "Guardando..." : "Guardar")
                            </button>


                            <button type="button"
                                    class="btn btn-outline-secondary"
                                    @onclick="Cancelar"
                                    disabled="@Guardando">
                                Cancelar
                            </button>

                        }
                    }
                </div>

            </div>
        </div>
    </section>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private bool Cargando = true;
    private bool Editando = false;
    private bool Guardando = false;
    private string? Error;

    private CiudadResponse? Ciudad;
    private UpdateCiudadRequest Model = new();

    private bool CargandoProvincias = false;
    private string? ErrorProvincias;
    private List<ItemProvincias> Provincias = new();

    protected override async Task OnParametersSetAsync()
    {
        await Cargar();
    }

    private async Task Cargar()
    {
        Cargando = true;
        Error = null;

        try
        {
            Ciudad = await CiudadesApiClient.GetByIdAsync(Id);

            if (Ciudad is not null)
            {
                Model.Nombre = Ciudad.Nombre;
                Model.ProvinciaId = Ciudad.ProvinciaId;
            }

            if (Provincias.Count == 0 && !CargandoProvincias)
                await CargarProvincias();
        }
        catch (Exception ex)
        {
            Error = ex.Message;
            Ciudad = null;
        }
        finally
        {
            Cargando = false;
        }
    }

    private async Task CargarProvincias()
    {
        CargandoProvincias = true;
        ErrorProvincias = null;

        try
        {
            var lista = await ProvinciasApiClient.ListarAsync();

            Provincias = lista
                .Select(x => new ItemProvincias(x.Id, x.Nombre))
                .OrderBy(x => x.Nombre)
                .ToList();
        }
        catch (Exception ex)
        {
            ErrorProvincias = ex.Message;
            Provincias = new();
        }
        finally
        {
            CargandoProvincias = false;
        }
    }

    private async Task EntrarEdicion()
    {
        if (Ciudad is null) return;

        Editando = true;
        Model.Nombre = Ciudad.Nombre;
        Model.ProvinciaId = Ciudad.ProvinciaId;

        if (Provincias.Count == 0 && !CargandoProvincias)
            await CargarProvincias();
    }


    private async Task Guardar()
    {
        if (Ciudad is null) return;

        Guardando = true;
        Error = null;

        try
        {
            Model.Nombre = (Model.Nombre ?? "").Trim();

            if (string.IsNullOrWhiteSpace(Model.Nombre))
                throw new InvalidOperationException("Ingresá un nombre.");

            if (Model.ProvinciaId <= 0)
                throw new InvalidOperationException("Seleccioná una provincia.");

            await CiudadesApiClient.UpdateAsync(Id, Model);

            Ciudad = await CiudadesApiClient.GetByIdAsync(Id);

            if (Ciudad is not null)
            {
                Model.Nombre = Ciudad.Nombre;
                Model.ProvinciaId = Ciudad.ProvinciaId;
            }

            Editando = false;
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            Guardando = false;
        }
    }

    private void Cancelar()
    {
        Editando = false;

        if (Ciudad is not null)
        {
            Model.Nombre = Ciudad.Nombre;
            Model.ProvinciaId = Ciudad.ProvinciaId;
        }
    }

    private record ItemProvincias(int Id, string Nombre);

    private void Volver() => Nav.NavigateTo("/ciudades");
}
