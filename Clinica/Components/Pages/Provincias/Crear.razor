@page "/provincias/crear"
@rendermode InteractiveServer
@using TurnosClinica.ApiClients.Paises
@using TurnosClinica.ApiClients.Provincias
@using TurnosClinica.Application.DTOs.Paises
@using TurnosClinica.Application.DTOs.Provincias
@inject ProvinciasApiClient Api
@inject PaisesApiClient PaisesApi
@inject NavigationManager Nav

<div class="admin-page">
    <header class="admin-header">
        <h2 class="admin-title">Provincias</h2>
        <p class="admin-subtitle">Crear</p>
    </header>

    <section class="admin-section">
        <div class="paises-scope">
            <div class="card border-0 shadow-sm pais-card">

                <div class="card-header bg-white border-bottom p-4 pais-header">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                        <div>
                            <h5 class="mb-1">Nueva provincia</h5>
                            <div class="text-muted small">Completá los datos y guardá</div>
                        </div>

                        <button type="button"
                                class="btn btn-outline-secondary"
                                @onclick="Volver"
                                disabled="@Guardando">
                            <i class="bi bi-arrow-left"></i> Volver
                        </button>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Error))
                    {
                        <div class="alert alert-danger mt-3 mb-0">@Error</div>
                    }
                </div>

                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label class="form-label">Nombre</label>
                            <input class="form-control"
                                   placeholder="Ej: Santiago Del Estero"
                                   @bind-value="Model.Nombre"
                                   @bind-value:event="oninput"
                                   disabled="@Guardando" />
                            <div class="form-hint">Se recortan espacios al guardar.</div>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label">Provincia</label>

                            @if (CargandoPaises)
                            {
                                <div class="form-text">Cargando Paises...</div>
                            }
                            else
                            {
                                @if (!string.IsNullOrWhiteSpace(ErrorPaises))
                                {
                                    <div class="alert alert-danger py-2 mb-2">@ErrorPaises</div>
                                }

                                <select class="form-select"
                                        @bind="Model.PaisesId"
                                        disabled="@Guardando">
                                    <option value="0" disabled>-- Seleccioná una Pais --</option>

                                    @foreach (var p in Paises)
                                    {
                                        <option value="@p.Id">@p.Nombre</option>
                                    }
                                </select>

                                <div class="form-hint">Elegí el País que le pertenezca a la Provincia </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white border-top p-4 d-flex gap-2 justify-content-end">

                    <button type="button"
                            class="btn btn-outline-secondary"
                            @onclick="Volver"
                            disabled="@Guardando">
                        Cancelar
                    </button>

                    <button type="button"
                            class="btn btn-manage"
                            @onclick="Create"
                            disabled="@Guardando">
                        <i class="bi bi-check2-circle"></i>
                        @(Guardando ? "Guardando..." : "Crear")
                    </button>


                </div>

            </div>
        </div>
    </section>
</div>

@code {
    private string? Error;
    private bool Guardando;

    private bool CargandoPaises = true;
    private string? ErrorPaises;
    private string Nombre = string.Empty;

    private CrearProvinciasVM Model = new() { PaisesId = 0 };
    private List<ItemPaises> Paises = new();


    protected override async Task OnInitializedAsync()
    {
        await CargarPaises();
    }

    private async Task CargarPaises()
    {
        CargandoPaises = true;
        ErrorPaises = null;

        try
        {
            var lista = await PaisesApi.ListarAsync(Nombre);

            Paises = lista
                .Select(x => new ItemPaises(x.Id, x.Nombre))
                .OrderBy(x => x.Nombre)
                .ToList();
        }
        catch (Exception ex)
        {
            ErrorPaises = ex.Message;
            Paises = new();
        }
        finally
        {
            CargandoPaises = false;
        }
    }

    private async Task Create()
    {
        Error = null;

        // si todavía está cargando paises, no dejamos crear
        if (CargandoPaises)
        {
            Error = "Esperá a que carguen los paises.";
            return;
        }

        var nombre = (Model.Nombre ?? "").Trim();
        if (string.IsNullOrWhiteSpace(nombre))
        {
            Error = "Ingresá un nombre.";
            return;
        }


        if (Model.PaisesId <= 0)
        {
            Error = "Seleccioná un país.";
            return;
        }


        Guardando = true;

        try
        {
            var req = new CrearProvinciaRequest
            {
                Nombre = Model.Nombre,
                PaisId = Model.PaisesId
            };

            await Api.CrearAsync(req);
            Nav.NavigateTo("/provincias");
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            Guardando = false;
        }
    }

    private class CrearProvinciasVM
    {
        public string Nombre { get; set; } = "";
        public int PaisesId { get; set; }
    }

    private void Volver() => Nav.NavigateTo("/provincias");
    private record ItemPaises(int Id, string Nombre);

}
