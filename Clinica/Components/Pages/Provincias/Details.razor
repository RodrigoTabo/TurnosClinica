@page "/provincias/details/{Id:int}"
@rendermode InteractiveServer
@using TurnosClinica.ApiClients.Provincias
@using TurnosClinica.ApiClients.Paises
@using TurnosClinica.Application.DTOs.Provincias
@inject ProvinciasApiClient ProvinciasApiClient
@inject PaisesApiClient PaisesApiClient
@inject NavigationManager Nav

<div class="admin-page">
    <header class="admin-header">
        <h2 class="admin-title">Provincias</h2>
        <p class="admin-subtitle">Detalle</p>
    </header>

    <section class="admin-section">
        <div class="paises-scope">
            <div class="card border-0 shadow-sm pais-card">

                <div class="card-header bg-white border-bottom p-4 pais-header">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                        <div>
                            <h5 class="mb-1">Provincias #@Id</h5>
                            <div class="text-muted small">Ver y editar</div>
                        </div>

                        <button type="button"
                                class="btn btn-outline-secondary"
                                @onclick="Volver"
                                @onclick:stopPropagation="true"
                                @onclick:preventDefault="true"
                                disabled="@Guardando">
                            <i class="bi bi-arrow-left"></i> Volver
                        </button>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Error))
                    {
                        <div class="alert alert-danger mt-3 mb-0">@Error</div>
                    }
                </div>

                <div class="card-body p-4">
                    @if (Cargando)
                    {
                        <div class="text-muted">Cargando...</div>
                    }
                    else if (Provincia is null)
                    {
                        <div class="alert alert-warning mb-0">No existe.</div>
                    }
                    else
                    {
                        <div class="row g-3 align-items-end">

                            <div class="col-12 col-md-3">
                                <label class="form-label">ID</label>
                                <div class="value-pill">#@Id</div>
                            </div>

                            <div class="col-12 col-md-5">
                                <label class="form-label">Nombre</label>

                                @if (!Editando)
                                {
                                    <div class="value-text">@Provincia.Nombre</div>
                                }
                                else
                                {
                                    <input class="form-control"
                                           @bind-value="Model.Nombre"
                                           @bind-value:event="oninput"
                                           disabled="@Guardando"
                                           placeholder="Nombre de la provincia" />
                                }
                            </div>

                            <div class="col-12 col-md-4">
                                <label class="form-label">Paises</label>

                                @if (!Editando)
                                {
                                    <div class="value-text">@Provincia.Pais</div>
                                }
                                else
                                {
                                    @if (!string.IsNullOrWhiteSpace(ErrorPaises))
                                    {
                                        <div class="alert alert-danger py-2 mb-2">@ErrorPaises</div>
                                    }

                                    <InputSelect class="form-select" @bind-Value="Model.PaisId" disabled="@Guardando">
                                        <option value="0" disabled>-- Seleccioná una País --</option>

                                        @foreach (var p in Paises)
                                        {
                                            <option value="@p.Id">@p.Nombre</option>
                                        }
                                    </InputSelect>

                                    @if (CargandoPaises)
                                    {
                                        <div class="text-muted small mt-1">Cargando paises...</div>
                                    }


                                }
                            </div>

                        </div>
                    }
                </div>

                <div class="card-footer bg-white border-top p-4 d-flex gap-2 justify-content-end">
                    @if (Provincia is not null && !Cargando)
                    {
                        @if (!Editando)
                        {
                            <button type="button"
                                    class="btn btn-manage"
                                    @onclick="EntrarEdicion"
                                    disabled="@Guardando">
                                <i class="bi bi-pencil"></i> Editar
                            </button>
                        }
                        else
                        {
                            <button type="button"
                                    class="btn btn-manage"
                                    @onclick="Guardar"
                                    disabled="@Guardando">
                                <i class="bi bi-check2-circle"></i>
                                @(Guardando ? "Guardando..." : "Guardar")
                            </button>


                            <button type="button"
                                    class="btn btn-outline-secondary"
                                    @onclick="Cancelar"
                                    disabled="@Guardando">
                                Cancelar
                            </button>

                        }
                    }
                </div>

            </div>
        </div>
    </section>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private bool Cargando = true;
    private bool Editando = false;
    private bool Guardando = false;
    private string? Nombre;
    private string? Error;

    private ProvinciaResponse? Provincia;
    private UpdateProvinciaRequest Model = new();

    private bool CargandoPaises = false;
    private string? ErrorPaises;
    private List<ItemPaises> Paises = new();

    protected override async Task OnParametersSetAsync()
    {
        await Cargar();
    }

    private async Task Cargar()
    {
        Cargando = true;
        Error = null;

        try
        {
            Provincia = await ProvinciasApiClient.GetByIdAsync(Id);

            if (Provincia is not null)
            {
                Model.Nombre = Provincia.Nombre;
                Model.PaisId = Provincia.PaisId;
            }

            if (Paises.Count == 0 && !CargandoPaises)
                await CargarPaises();
        }
        catch (Exception ex)
        {
            Error = ex.Message;
            Provincia = null;
        }
        finally
        {
            Cargando = false;
        }
    }

    private async Task CargarPaises()
    {
        CargandoPaises = true;
        ErrorPaises = null;

        try
        {
            var lista = await PaisesApiClient.ListarAsync(Nombre);

            Paises = lista
                .Select(x => new ItemPaises(x.Id, x.Nombre))
                .OrderBy(x => x.Nombre)
                .ToList();
        }
        catch (Exception ex)
        {
            ErrorPaises = ex.Message;
            Paises = new();
        }
        finally
        {
            CargandoPaises = false;
        }
    }

    private async Task EntrarEdicion()
    {
        if (Provincia is null) return;

        Editando = true;
        Model.Nombre = Provincia.Nombre;
        Model.PaisId = Provincia.PaisId;

        if (Paises.Count == 0 && !CargandoPaises)
            await CargarPaises();
    }


    private async Task Guardar()
    {
        if (Provincia is null) return;

        Guardando = true;
        Error = null;

        try
        {
            Model.Nombre = (Model.Nombre ?? "").Trim();

            if (string.IsNullOrWhiteSpace(Model.Nombre))
                throw new InvalidOperationException("Ingresá un nombre.");

            if (Model.PaisId <= 0)
                throw new InvalidOperationException("Seleccioná un país.");

            await ProvinciasApiClient.UpdateAsync(Id, Model);

            Provincia = await ProvinciasApiClient.GetByIdAsync(Id);

            if (Provincia is not null)
            {
                Model.Nombre = Provincia.Nombre;
                Model.PaisId = Provincia.PaisId;
            }

            Editando = false;
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
        finally
        {
            Guardando = false;
        }
    }

    private void Cancelar()
    {
        Editando = false;

        if (Provincia is not null)
        {
            Model.Nombre = Provincia.Nombre;
            Model.PaisId = Provincia.PaisId;
        }
    }

    private record ItemPaises(int Id, string Nombre);

    private void Volver() => Nav.NavigateTo("/provincias");
}
